@model SettingPasswordUser

@using (Html.BeginForm("SetPassword" , "Account" , null , FormMethod.Post))
{
    <div id="login" style="padding-left: inherit">

        <div class="col-md-offset-4 col-md-10" style="align-items: center">
            <p style="font-size: 30px; padding-top: 70px">Set password</p>

            @Html.HiddenFor(model => model.Token)
            <div>
                <strong>Password:</strong> @Html.EditorFor(model => model.Password , new {htmlAttributes = new {@class = "form-control"}})
            </div>
        </div>

        <div class="col-md-offset-4 col-md-10">
            <div>
                <strong>Confirm password:</strong> @Html.EditorFor(model => model.ConfirmPassword , new {htmlAttributes = new {@class = "form-control"}})<br/>
            </div>
        </div>
        <div>
            <div class="col-md-offset-4 col-md-10">

                <input type="submit" value="Submit" class="btn btn-success" style="height: 40px; max-width: 280px; width: 280px;"/>

                <br/>
            </div>
        </div>
    </div>
}